{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
	  "enabled": true
	},
	"formatter": {
	  "indentStyle": "space",
	  "indentWidth": 2,
	  "lineWidth": 90
	},
	"javascript": {
	  "formatter": {
		"arrowParentheses": "asNeeded",
		"jsxQuoteStyle": "double",
		"quoteStyle": "single",
		"semicolons": "asNeeded",
		"trailingCommas": "es5"
	  }
	},
	"linter": {
	  "enabled": true,
	  "rules": {
		"recommended": true,
		"style": {
		  "noNonNullAssertion": "off",
		  "useImportType": "off"
		}
	  }
	},
	"files": {
	  "ignore": ["node_modules", ".history"]
	}
  }